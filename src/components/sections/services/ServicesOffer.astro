---
import servicesData from '../../../data/services.json';
import type { ServicesData } from '../../../types';
import SectionTitle from '../../common/SectionTitle.astro';

// Use the main "oferta" list from structured JSON
const finalServices = (servicesData as ServicesData).oferta;
---

<section class="py-24 bg-white relative">
  <div class="container mx-auto px-6 md:px-25">
    
    <SectionTitle 
      title="Oferta de Servicios Jurídicos"
      centered={false}
      theme="light"
    >
      <div class="w-20 h-1 bg-accent mb-6"></div>
      <p class="text-gray-500 font-body text-sm md:text-base font-light max-w-2xl">
        Presentamos nuestras áreas de práctica más solicitadas. Sin embargo, nuestro equipo multidisciplinario está capacitado para asesorarle en una amplia variedad de trámites y procesos legales adicionales según sus necesidades específicas.
      </p>
    </SectionTitle>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-16">
      {finalServices.map((service, index) => (
        <div 
          class="bg-primary p-6 md:p-10 flex flex-col h-full fade-in-section hover:shadow-2xl transition-shadow duration-300 rounded-sm"
          style={`transition-delay: ${index * 100}ms`}
        >
          
          <!-- Title -->
          <h3 class="font-heading text-2xl md:text-3xl lg:text-[2.5rem] text-white mb-6 md:mb-8 leading-tight font-normal">
            {service.title.replace('Derecho ', '')}
          </h3>

          <!-- Divider -->
          <div class="w-12 md:w-16 h-1 bg-accent mb-6 md:mb-8 opacity-80"></div>

          <!-- Description -->
          <p class="text-gray-300 font-body font-light text-sm md:text-base leading-relaxed mb-6 md:mb-8 opacity-90">
            {service.fullDescription}
          </p>

          <!-- Features (Bullet points) -->
          {service.features && (
            <ul class="space-y-2 md:space-y-3 mb-8 md:mb-10">
              {service.features.map(feature => (
                 <li class="flex items-start gap-3">
                  <div class="w-1 md:w-1.5 h-1 md:h-1.5 rounded-full bg-accent mt-2 md:mt-2.5 flex-shrink-0"></div>
                  <span class="text-gray-300 font-body text-sm md:text-[15px] font-light leading-relaxed">{feature}</span>
                </li>
              ))}
            </ul>
          )}

          <!-- Separator Line -->
          <div class="w-full h-px bg-gray-800 mb-6 mt-auto"></div>

          <!-- Button -->
          <div>
            <a 
              href={`/servicios#${service.id}`}
              class="block w-full text-center py-3 md:py-4 border border-accent text-accent font-heading text-[10px] md:text-xs uppercase tracking-[0.2em] hover:bg-accent hover:text-primary transition-all duration-300"
            >
              Consultar Ahora
            </a>
          </div>

        </div>
      ))}
    </div>

  </div>
</section>