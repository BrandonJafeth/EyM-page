<section class="py-16 md:py-20 bg-gray-50">
  <div class="container mx-auto px-6 md:px-30">
    
    <div class="text-center mb-10 md:mb-16">
      <h2 class="font-heading text-2xl md:text-4xl text-primary">Nuestras Oficinas</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 md:gap-16">
      
      <!-- Liberia -->
      <div class="space-y-6">
        <div>
          <h3 class="font-heading text-xl md:text-2xl text-primary mb-2">Liberia</h3>
          <p class="text-gray-600 font-body text-sm mb-2 font-medium">125 metros norte de la Municipalidad de Liberia, frente a Motomarcas</p>
          <div class="inline-block bg-primary/5 px-3 py-1.5 rounded-xs border border-primary/10">
             <p class="text-primary text-xs md:text-sm font-semibold">
               <span class="text-accent-darker font-bold uppercase text-[10px] md:text-xs tracking-wider mr-1">Horario:</span> 
               Lun-Vie 9am - 5pm (Cita Previa)
             </p>
          </div>
        </div>
        
        <div class="w-full h-[250px] md:h-[350px] bg-gray-200 relative group overflow-hidden shadow-sm hover:shadow-md transition-shadow">
          <iframe 
            src="https://maps.google.com/maps?q=10.631784439086914,-85.43968963623047&z=17&output=embed" 
            title="Mapa de la oficina de Liberia - 125 metros norte de la Municipalidad de Liberia"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            class="transition-all duration-500"
          ></iframe>
        </div>
        
        <a href="https://www.google.com/maps?q=10.631784439086914,-85.43968963623047&z=17&hl=es" target="_blank" aria-label="Abrir mapa de la oficina de Liberia en Google Maps" class="inline-flex items-center text-primary font-bold text-xs uppercase tracking-widest font-heading hover:text-accent hover:underline transition-colors">
          Abrir en Google Maps <span class="ml-2">→</span>
        </a>
      </div>

      <!-- Cañas -->
      <div class="space-y-6">
        <div>
          <h3 class="font-heading text-xl md:text-2xl text-primary mb-2">Cañas</h3>
          <p class="text-gray-600 font-body text-sm mb-2 font-medium">Urbanización Chorotega, antigua pulpería el buen trato</p>
          <div class="inline-block bg-primary/5 px-3 py-1.5 rounded-xs border border-primary/10">
             <p class="text-primary text-xs md:text-sm font-semibold">
               <span class="text-accent-darker font-bold uppercase text-[10px] md:text-xs tracking-wider mr-1">Horario:</span> 
               Lun-Vie 9am - 12pm (Cita Previa)
             </p>
          </div>
        </div>
        
        <div class="w-full h-[250px] md:h-[350px] bg-gray-200 relative group overflow-hidden shadow-sm hover:shadow-md transition-shadow">
           <iframe 
            src="https://maps.google.com/maps?q=10.4351432,-85.0923132&z=17&output=embed" 
            title="Mapa de la oficina de Cañas - Urbanización Chorotega"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            class="transition-all duration-500"
          ></iframe>
        </div>
        
        <a href="https://maps.app.goo.gl/vHkH8tm1FjrMhWoh8?g_st=iw" target="_blank" aria-label="Abrir mapa de la oficina de Cañas en Google Maps" class="inline-flex items-center text-primary font-bold text-xs uppercase tracking-widest font-heading hover:text-accent hover:underline transition-colors">
          Abrir en Google Maps <span class="ml-2">→</span>
        </a>
      </div>

    </div>

  </div>
</section>
