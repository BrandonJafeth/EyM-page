---
import homeData from '../../../data/home.json';

const { hero } = homeData;
---

<section class="relative w-full h-[100dvh] min-h-175 overflow-hidden bg-primary">
  <!-- Background Image - Fullscreen -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://res.cloudinary.com/dkwvaxxdw/image/upload/q_auto:good,f_auto,w_1200/v1770179184/IMG-20260203-WA0040_glhgv4.jpg" 
      alt="Equipo EYM Asociados" 
      fetchpriority="high"
      loading="eager"
      decoding="async"
      width="1200"
      height="1600"
      class="w-full h-full object-cover object-[center_35%] md:object-center"
    />
    
    <!-- Overlay Gradient - Adjusted for text legibility on mobile -->
    <div 
      class="absolute inset-0" 
      style="background: linear-gradient(to bottom, transparent 30%, rgba(8, 22, 34, 0.4) 60%, #091723 100%);"
    ></div>
  </div>

  <!-- Content - Positioned at bottom -->
  <div class="absolute bottom-0 left-0 right-0 z-10 w-full container mx-auto px-6 md:px-30 pb-32 md:pb-16">
    
    <div class="max-w-200 fade-in-up">
      <!-- Main Headline -->
      <h1 class="font-heading text-[32px] md:text-[64px] leading-[1.15] text-white font-normal mb-4 md:mb-6 tracking-[-0.01em] drop-shadow-md">
        <span set:html={hero.title.replace(/\n/g, '<br/>')} />
      </h1>

      <!-- Subheadline -->
      <p class="font-heading text-sm md:text-[19px] leading-relaxed text-secondary font-normal mb-6 md:mb-8 max-w-125 drop-shadow-sm">
        {hero.subtitle}
      </p>

      <!-- CTA -->
      <a 
        href="/contacto" 
        class="group inline-block font-heading text-xs md:text-base text-white bg-transparent border border-white px-8 py-3 md:px-10 md:py-4 rounded-xs tracking-widest uppercase transition-colors duration-300 hover:bg-white hover:text-primary"
      >
        {hero.cta}
      </a>
    </div>
  </div>
</section>

<style>
  .fade-in-up {
    animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) both;
    will-change: transform, opacity;
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
  }

  .fade-in-delay {
    animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.5s both;
    will-change: transform, opacity;
    backface-visibility: hidden;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>
