---
import homeData from '../../../data/home.json';
import SectionTitle from '../../common/SectionTitle.astro';

const { aboutSummary } = homeData;
// Fallback stats if missing in JSON
const stats = aboutSummary.stats || [];
---

<section class="py-16 md:py-24 bg-white relative overflow-hidden">
  
  <!-- Decorative background letter (Optional - from previous design context) -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none select-none">
     <span class="font-heading text-[300px] md:text-[600px] text-gray-50 opacity-[0.03] leading-none">E</span>
  </div>

  <div class="container mx-auto px-6 md:px-30 relative z-10">
    
    <SectionTitle 
      title={aboutSummary.title} 
      subtitle={aboutSummary.tagline} 
      theme="light"
    >
      <div class="w-16 h-0.5 bg-accent mx-auto opacity-50"></div>
    </SectionTitle>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-16 max-w-6xl mx-auto mb-16 md:mb-20 fade-in-section delay-100">
      
      {stats.map((stat) => (
      <!-- Stat Item -->
      <div class="text-center group">
        <div class="font-heading text-5xl md:text-7xl lg:text-7xl text-accent font-light mb-4 md:mb-6 group-hover:scale-105 transition-transform duration-500">
          {stat.value}
        </div>
        <div class="text-xs md:text-sm uppercase tracking-[0.1em] text-gray-500 font-body max-w-[200px] mx-auto leading-relaxed">
          {stat.label}
        </div>
      </div>
      ))}

    </div>

    <!-- Description & CTA -->
    <div class="max-w-3xl mx-auto text-center fade-in-section delay-200 mt-8 md:mt-12">
      <p class="font-heading text-base md:text-2xl text-gray-600 leading-relaxed max-w-4xl mx-auto mb-8 md:mb-12 px-4">
        {aboutSummary.description}
      </p>

      <div>
        <a 
          href="/sobre-nosotros" 
          class="inline-block px-8 py-3 md:px-10 md:py-4 border border-primary text-primary font-heading text-xs md:text-sm uppercase tracking-[0.15em] hover:bg-primary hover:text-accent transition-all duration-300"
        >
          {aboutSummary.cta}
        </a>
      </div>
    </div>

  </div>
</section>