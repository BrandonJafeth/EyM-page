---
import siteData from '../../data/site.json';

const currentYear = new Date().getFullYear();

const navLinks = [
  { text: 'Inicio', href: '/' },
  { text: 'Sobre Nosotros', href: '/sobre-nosotros' },
  { text: 'Servicios', href: '/servicios' },
  { text: 'Contacto', href: '/contacto' },
];

const legalLinks = [
  { text: 'Política de Privacidad', href: '/privacidad' },
  { text: 'Términos y Condiciones', href: '/terminos' },
  { text: 'Aviso Legal', href: '/aviso-legal' },
];
---

<footer class="bg-[#091723] text-white pt-16 pb-8 border-t border-[#AF9232]/30">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      <!-- Brand Column -->
      <div class="space-y-6">
        <a href="/" class="block">
          <img src={siteData.logo} alt={siteData.name} class="h-16 w-auto brightness-0 invert" />
        </a>
        <p class="text-gray-400 font-heading text-lg leading-relaxed max-w-xs">
          Excelencia legal con enfoque humano
        </p>
        <div class="flex space-x-6 pt-2">
            <!-- Phone Icon -->
            <a href={`tel:${siteData.contact.phone.replace(/\s/g, '')}`} class="text-white hover:text-[#AF9232] transition-colors" aria-label="Llamar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
            </a>
            <!-- Facebook Icon (Placeholder) -->
            <a href={siteData.social.facebook} class="text-white hover:text-[#AF9232] transition-colors" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
            </a>
            <!-- Instagram Icon (Placeholder) -->
            <a href={siteData.social.instagram} class="text-white hover:text-[#AF9232] transition-colors" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                  <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" />
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                </svg>
            </a>
        </div>
      </div>

      <!-- Navigation -->
      <div class="flex flex-col">
        <h3 class="font-heading text-sm font-bold text-[#AF9232] mb-6 uppercase tracking-[0.2em] self-start">NAVEGACIÓN</h3>
        <ul class="space-y-4">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors duration-300 text-base">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="flex flex-col">
        <h3 class="font-heading text-sm font-bold text-[#AF9232] mb-6 uppercase tracking-[0.2em]">CONTACTO</h3>
        <ul class="space-y-4 text-base text-gray-300">
           <li>
            <a href={`tel:${siteData.contact.phone.replace(/\s/g, '')}`} class="hover:text-white transition-colors block mb-1">
               {siteData.contact.phone}
            </a>
          </li>
          <li>
            <a href={`mailto:${siteData.contact.email}`} class="hover:text-white transition-colors block mb-1">
              {siteData.contact.email}
            </a>
          </li>
          <li>
            <a href={siteData.contact.maps_link} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors block leading-relaxed">
              Liberia, Guanacaste, Costa Rica
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="flex flex-col">
          <h3 class="font-heading text-sm font-bold text-[#AF9232] mb-6 uppercase tracking-[0.2em]">LEGAL</h3>
          <ul class="space-y-4 text-base text-gray-300">
            {legalLinks.map(link => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors duration-300">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500 font-light">
      <p>&copy; {currentYear} {siteData.name}. Todos los derechos reservados.</p>
      <p class="mt-4 md:mt-0">Diseñado con excelencia</p>
    </div>
  </div>
</footer>
