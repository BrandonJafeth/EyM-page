---
import Layout from '../../layouts/Layout.astro';
import team from '../../data/team.json';
import { Mail, Phone, MessageCircle, ChevronDown, Award, BookOpen, Briefcase, Gavel, GraduationCap } from 'lucide-react';
import SectionTitle from '../../components/common/SectionTitle.astro';

export async function getStaticPaths() {
  return team.map((member) => ({
    params: { id: member.id },
    props: { member },
  }));
}

const { member } = Astro.props;

const sections = [
  {
    id: "profile",
    title: "Perfil Profesional",
    icon: Briefcase,
    content: member.professionalProfile,
    isList: false
  },
  {
    id: "education",
    title: "Formación Académica",
    icon: GraduationCap,
    content: member.education,
    isList: true
  },
  {
    id: "judicial",
    title: "Experiencia Judicial",
    icon: Gavel,
    content: member.judicialExperience,
    isList: true
  },
  {
    id: "specialties",
    title: "Especialidades",
    icon: Award,
    content: member.specialties,
    isList: true
  },
  {
    id: "courses",
    title: "Cursos y Seminarios",
    icon: BookOpen,
    content: member.courses,
    isList: true
  }
];

// Filtrar secciones vacías
const activeSections = sections.filter(section => {
  if (Array.isArray(section.content)) return section.content.length > 0;
  return section.content && section.content.length > 0;
});
---


<Layout title={`${member.name} | EYM & Asociados`}>
  <div class="bg-white pt-32 pb-20 min-h-screen">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        
        <!-- Header Section -->
        <div class="grid md:grid-cols-[300px_1fr] md:gap-12 lg:gap-16 mb-16 items-start">
             <div class="aspect-[3/4] w-full overflow-hidden rounded-none group mb-8 md:mb-0 shadow-sm">
               <img 
                src={member.image} 
                alt={member.name}
                class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
                transition:name={`image-${member.id}`}
              />
            </div>
            
            <div>
               <span class="inline-block mb-3 font-heading text-lg text-primary/80 italic font-medium">
                {member.role}
              </span>
              <h1 class="font-heading text-4xl lg:text-5xl text-primary mb-6 leading-tight">
                {member.name}
              </h1>
               <div class="prose prose-lg text-gray-800 max-w-none text-justify leading-relaxed">
                <p>{member.fullBio}</p>
              </div>
            </div>
        </div>

        <!-- Accordion Section -->
        <div class="mb-16">
            <div class="space-y-4">
              {activeSections.map((section, index) => (
                <details class="group border border-gray-100 bg-white hover:border-accent/30 transition-all duration-300 open:border-accent/30" open={index === 0}>
                  <summary class="flex items-center justify-between p-6 cursor-pointer select-none">
                    <h3 class="font-heading text-lg text-primary/80 group-open:text-accent transition-colors">{section.title}</h3>
                    <ChevronDown className="w-5 h-5 text-gray-300 transition-transform duration-300 group-open:rotate-180 group-open:text-accent" />
                  </summary>
                  <div class="px-6 pb-6 animate-in fade-in slide-in-from-top-1 duration-200">
                      {section.isList ? (
                        <ul class="space-y-3 mt-2">
                          {Array.isArray(section.content) && section.content.map((item) => (
                            <li class="flex items-start gap-4 text-gray-800 text-sm md:text-base">
                              <span class="mt-2.5 w-1 h-1 rounded-full bg-accent flex-shrink-0"></span>
                              <span class="leading-relaxed">{item}</span>
                            </li>
                          ))}
                        </ul>
                      ) : (
                        <p class="text-gray-800 leading-relaxed text-sm md:text-base mt-2">{section.content}</p>
                      )}
                  </div>
                </details>
              ))}
            </div>
        </div>

        <!-- Contact Footer -->
        <div class="bg-gray-50 p-8 md:p-12 relative overflow-hidden rounded-sm">
            <div class="absolute inset-y-0 left-0 w-1 bg-accent hidden md:block"></div>
            
            <h3 class="font-heading text-xl text-primary mb-8 ml-0 md:ml-4">Información de contacto</h3>
            
            <div class="space-y-4 ml-0 md:ml-4">
                <!-- Email -->
                <a href={`mailto:${member.contact.email}`} class="flex items-center gap-4 group w-max">
                  <Mail size={18} className="text-accent" />
                  <span class="text-gray-800 font-medium group-hover:text-primary transition-colors">{member.contact.email}</span>
                </a>

                <!-- Phone -->
                {member.contact.phone && (
                  <a href={`tel:${member.contact.phone}`} class="flex items-center gap-4 group w-max">
                     <Phone size={18} className="text-accent" />
                    <span class="text-gray-800 font-medium group-hover:text-primary transition-colors">{member.contact.phone}</span>
                  </a>
                )}

                <!-- Whatsapp -->
                {member.contact.whatsapp && (
                  <a href={`https://wa.me/506${member.contact.whatsapp.replace(/[^0-9]/g, '')}`} target="_blank" class="flex items-center gap-4 group w-max">
                     <MessageCircle size={18} className="text-accent" />
                     <span class="text-gray-800 font-medium group-hover:text-primary transition-colors">{member.contact.whatsapp}</span>
                  </a>
                )}
            </div>
        </div>

       <div class="mt-12">
            <a href="/sobre-nosotros" class="text-gray-600 hover:text-primary flex items-center gap-2 transition-colors font-heading text-lg group w-max">
            <span class="group-hover:-translate-x-1 transition-transform">←</span> Volver al equipo
            </a>
        </div>
    </div>
    </div>
  </div>
</Layout>

<style>
  /* Custom scrollbar for better aesthetic if needed */
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>